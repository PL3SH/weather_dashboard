# app/views/weather/index.html.erb
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Weather Dashboard</h1>
  
  <%= form_with url: search_weather_path, class: "mb-8", data: { remote: true } do |f| %>
    <div class="flex gap-4">
      <%= f.text_field :city, 
          placeholder: "Enter city name", 
          class: "flex-1 p-2 border rounded" %>
      <%= f.text_field :country_code, 
          placeholder: "Country code (e.g., US)", 
          class: "w-32 p-2 border rounded" %>
      <%= f.submit "Get Weather", 
          class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  <% end %>
  
  <div id="weather-results" class="mb-8">
    <%= render partial: 'weather_info' if @weather %>
  </div>
  
  <div class="recent-searches">
    <h2 class="text-xl font-semibold mb-4">Recent Searches</h2>
    <%= render partial: 'recent_locations', locals: { locations: @recent_locations } %>
  </div>
</div>

